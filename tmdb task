

input=$1
if [ -z "$input" ]; then
echo Input missing the movie name
exit

fi

percent=$(curl -s https://www.themoviedb.org/movie/$input | grep user_score_chart |xargs -n1 | grep  data-percent | awk -F = '{print $2}'|awk -F . '{print $2}')

echo percent -$percent

exit

if [ "$percent" -ge 70 ]
then

   echo good
else
   echo average

 fi  